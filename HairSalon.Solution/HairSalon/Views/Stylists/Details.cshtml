@{
  Layout = "_Layout";
  ViewBag.Title = "Stylist Details";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h1>Stylist Details</h1>

@if (Model == null)
{
  <p>Sorry, stylist not found.</p>
}
else
{
  <h2>About @Html.DisplayFor(model => model.Name):</h2>
  <p>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</p>
  <p>@Html.DisplayName("Hire Date"): @Html.DisplayFor(model => model.HireDate.Month)/@Html.DisplayFor(model => model.HireDate.Day)/@Html.DisplayFor(model => model.HireDate.Year)</p>
  <p>@Html.DisplayName($"Clients seeing {Model.Name}"):</p>
  @if (@Model.Clients.Count == 0)
  {
    <p>None registered at this moment.</p>
  }
  else
  {
    @foreach (Client client in @Model.Clients)
    {
      <h4>@client.Name</h4>
    }
    <p>@Model.Clients.Count Client(s) registered for @Model.Name</p>
  }
}

<h4>@Html.ActionLink("Add New Client", "Create", "Clients")</h4>
<h4>@Html.ActionLink("Back to All Stylists", "Index", "Stylists")</h4>
<h4>@Html.ActionLink("Back To Home", "Index", "Home")</h4>

